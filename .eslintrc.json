{
	"root": true,
	"parser": "babel-eslint",
	"extends": "fullstack",
	"rules": {
		"semi": 0,
    "new-cap": [1, { "capIsNewExceptions": ["Router", "SEND_fire"] }],
		"max-statements": 0,
		"no-redeclare": 0, 
		"complexity": 0,
		"no-unused-vars": 0,
		"camelcase": 0,
		"no-loop-func": 0,
		"class-methods-use-this": 0,
		"max-depth": "off",
		"id-length": [ 1, { "exceptions": [
						"x",
						"y",
						"i",
						"j",
						"R",
						"e"
					]
				}
			]
	}
}
